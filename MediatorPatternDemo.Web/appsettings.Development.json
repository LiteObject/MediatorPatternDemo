{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "c:\\temp\\log.txt",
          "outputTemplate": "{NewLine}[{Timestamp:HH:mm:ss} {Level:u3} {SourceContext:l}]{NewLine}{Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "MediatorPatternDemo.Web"
    }
  },
  "AllowedHosts": "*"
}